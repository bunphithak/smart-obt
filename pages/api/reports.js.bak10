// Helper function to parse form data
const parseForm = async (req) => {
  return new Promise((resolve, reject) => {
    console.log('üîç parseForm: Starting...');
    
    // Timeout after 10 seconds
    const timeout = setTimeout(() => {
      console.error('‚ùå parseForm: TIMEOUT after 10 seconds!');
      reject(new Error('Form parsing timeout'));
    }, 10000);
    
    const uploadDir = path.join(process.cwd(), 'public', 'uploads');
    
    // Check if uploads directory exists, create if not
    const fs = require('fs');
    if (!fs.existsSync(uploadDir)) {
      fs.mkdirSync(uploadDir, { recursive: true });
      console.log('üìÅ Created uploads directory');
    }
    
    const form = formidable({
      uploadDir,
      keepExtensions: true,
      maxFileSize: 10 * 1024 * 1024, // 10MB
      multiples: true,
      allowEmptyFiles: true,
      minFileSize: 0,
    });

    console.log('üîç parseForm: Calling form.parse()...');
    form.parse(req, (err, fields, files) => {
      clearTimeout(timeout); // Clear timeout if successful
      
      if (err) {
        console.error('‚ùå Formidable parse error:', err);
        console.error('‚ùå Error details:', {
          message: err.message,
          code: err.code,
          httpCode: err.httpCode
        });
        reject(err);
        return;
      }
      console.log('‚úÖ Form parsed successfully');
      console.log('üìä Fields count:', Object.keys(fields).length);
      console.log('üìä Files count:', Object.keys(files).length);
      resolve({ fields, files });
    });
  });
};

