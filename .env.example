# Smart OBT Environment Variables Template
# ==================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# Application Settings
# ==================================================
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Smart OBT
NEXT_PUBLIC_APP_VERSION=1.0.0

# Database Configuration (เลือกอันที่ต้องการใช้)
# ==================================================

# PostgreSQL (แนะนำ)
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_username
DB_PASSWORD=your_password
DB_NAME=smart_obt
DATABASE_URL=postgresql://your_username:your_password@localhost:5432/smart_obt

# MySQL/MariaDB
# DB_TYPE=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=your_password
# DB_NAME=smart_obt
# DATABASE_URL=mysql://root:your_password@localhost:3306/smart_obt

# MongoDB
# MONGODB_URI=mongodb://localhost:27017/smart_obt
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/smart_obt

# PlanetScale (MySQL Serverless)
# DATABASE_URL=mysql://username:password@host.connect.psdb.cloud/smart_obt?sslaccept=strict

# Supabase (PostgreSQL)
# DATABASE_URL=postgresql://postgres:password@db.supabase.co:5432/postgres

# Firebase Configuration
# ==================================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# File Upload / Cloud Storage
# ==================================================
CLOUD_STORAGE_PROVIDER=firebase
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_storage_bucket

# Cloudinary (ทางเลือก)
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# AWS S3 (ทางเลือก)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=ap-southeast-1
# AWS_S3_BUCKET=smart-obt-uploads

# Security & Authentication
# ==================================================
JWT_SECRET=your_super_secret_jwt_key_here
SESSION_SECRET=your_super_secret_session_key_here
NEXTAUTH_SECRET=your_super_secret_nextauth_key_here
NEXTAUTH_URL=http://localhost:3000

# API Configuration
# ==================================================
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT=30000
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Email Configuration (สำหรับอนาคต)
# ==================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# FROM_EMAIL=noreply@smart-obt.com

# Logging & Monitoring
# ==================================================
LOG_LEVEL=info
ENABLE_CONSOLE_LOG=true
ENABLE_FILE_LOG=false

# Development Settings
# ==================================================
DEBUG_MODE=true
ENABLE_MOCK_DATA=true
SHOW_QUERY_LOG=false

# Production Settings (สำหรับ deploy)
# ==================================================
# NODE_ENV=production
# NEXT_PUBLIC_API_URL=https://your-domain.com
# DATABASE_URL=your_production_database_url
# JWT_SECRET=your_production_jwt_secret
# SESSION_SECRET=your_production_session_secret
